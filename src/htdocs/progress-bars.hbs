<div class="row">
  <h2>Progress Bars (_components/_progress.scss)</h2>
  <div class="grid-20">
      <h3>Progress bars</h3>
      <p>Progress Bars are available in gradient, stripped and stacked versions. </p>
  </div>
  <div class="grid-80">
      <h3>Basic
          <span class="caret"></span>
      </h3>
      <progress class="c-progress" value="75" max="100">
          <div class="c-progress">
              <span class="c-progress-bar" style="width: 75%;">75%</span>
          </div>
      </progress>
      <h3>Striped
          <span class="caret"></span>
      </h3>
      <progress class="c-progress c-progress-striped " value="75" max="100">
          <div class="c-progress">
              <span class="c-progress-bar" style="width: 75%;">75%</span>
          </div>
      </progress>
  </div>
  <div class="grid-20">
      <h3>Checkout Progress</h3>
  </div>
  <div class="grid-80">
      <h3>Chcekout
          <span class="caret"></span>
      </h3>
      <ul class="c-progress-checkout">
        <li class="completed"> <span class="donut">Done</span>Billing Address</li>
        <li class="active"> <span class="donut">2</span>Delivery Address</li>
        <li> <span class="donut">3</span>Delivery MEthod</li>
        <li> <span class="donut">4</span>Payment Method</li>
        <li> <span class="donut">5</span>Confirmation</li>
      </ul>
  </div>
</div>