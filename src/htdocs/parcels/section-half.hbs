<div class="section">
  {{# times 4 }}
  <div class="section--item section--item--half section--bg section--half-{{ this }} col-xs-6 col-md-6 u-font-ta-c u-mar-b-small">
    <div class="section--detail">
      <div class="section--detail-title u-mar-v-medium u-font-wb">{{lorem count=5}}</div>
      <div class="section--detail-sub u-mar-v-medium u-font-wb u-color-grey70">{{lorem count=12}}</div>
      <div class="section--detail-btn c-btn c-btn-primary__alt u-mar-v-medium hidden-lg-down">View</div>
    </div>
  </div>
  <style>
    .section--half-{{ this }} {
        background-image: url("../img/half-{{ this }}.jpg");
    }
  </style>
  {{/ times }}
</div>