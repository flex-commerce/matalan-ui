<div class="o-section">
  {{#each halfsection }}
  <div class="o-section--item o-section--item--half o-section--bg o-section--half-{{sectionId}} col-xs-12 col-md-6 u-font-ta-c">
    <div class="o-section-detail--outer__border o-section--detail--bottom">
      <div class="o-section--detail">
        <div class="o-section--detail-title">{{sectionTitle}}</div>
        {{#each sectionItems}}
        <a class="o-section-detail--link">{{ this }}</a>
        {{/each}}
      </div>
    </div>
  </div>
  <style>
    .o-section--half-{{sectionId}} {
        background-image: url("{{sectionImage}}");
        background-position: {{imagePosition}};
    }
  </style>
  {{/each}}
</div>