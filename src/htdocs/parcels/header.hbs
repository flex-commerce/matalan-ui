<div class="o-header__container">
  <div class="container">

    <div class="row header-pb-20">

      <div class="col-3@xs hidden@lg-up header--height u-pad-0">
        <div class="o-header--menu-button">
          <a data-toggle="modal" data-target="#nav-contain"
            class="js-nav-mobile-button c-btn nav-mobile-button u-no-bord">
            <i class="icon icon-menu-menu"></i>
          </a>
        </div>
      </div>

      <div class="col-5@xs col-4@lg u-pad-h-0">
        <div class="o-header__brand">
          <a href="./homepage.html"><img src="img/matalan-logo-responsive.svg" alt=""></a>
        </div>
      </div>


      <div class="col-4@xs col-8@lg">

        <div class="row">

          <div class="hidden@md-down col-12@xs u-cf u-mar-b-medium">
            <ul class="o-list-inline-seperated u-fr">
              <li><a href="">My Acount</a></li>
              <li><a href="">Delivery</a></li>
              <li><a href="">Returns</a></li>
              <li><a href="">Store Finder</a></li>
              <li><a href="">Contact</a></li>
            </ul>
          </div>

          <div class="col-6@xs col-6@md col-3@lg u-pad-r-0 col-push-6@lg-up">
            <div class="o-header__search">
              <a class="c-btn hidden@lg-up header--mobile-search u-no-bord-vis">
                <i class="icon icon-search"></i>
              </a>
              <a class="c-btn hidden@md-down js-minibag--view u-font-upper u-no-bord-vis u-bgcolor-white">
                View your bag ({{minibag.category.collection.products.length}})</a>
            </div>
          </div>



          <div class="col-6@xs col-6@md col-3@lg u-pad-l-0 checkout-bag col-push-6@lg-up">
          <!-- minibag small button -->
            <a class="c-btn hidden@lg-up minibag-link u-no-bord"
              data-toggle="modal" data-target="#minibag-contain">
              <span class="o-icon-with-addon"><i class="icon icon-mini-bag"></i>
                <span class="">{{minibag.category.collection.products.length}}x</span>
              </span>
            </a>
            <!-- minibag large button -->
            <button type="button"
              class="js-minibag c-btn c-btn-secondary__alt c-btn-block hidden@md-down u-font-upper"
              >Checkout</button>
          </div>

          <div class="col-12@sm col-8@md col-6@lg u-pad-0 hidden@md-down col-pull-6@lg-up">
            <div class="o-header__search-bar">
              <form name="searchProducts" class="o-form--inline c-search-form">
                <div class="o-form__row">
                  <div class="o-form--input-pack o-form__input-contain">
                    <div class="input-group--addon unstyled input-group--addon__inset">
                      <i class="icon icon-search"></i>
                    </div>
                    <input type="text" name="searchTerm" minlength="3" required
                      class="o-input o-input--textual input-addon--expand input-group--addon__inset-left"
                      placeholder="Enter Keyword or Product Code" pattern=".{3,}" title="3 characters minimum">
                    <div class="input-group--addon input-group--addon__button unstyled c-search__button">
                      <button type="submit" class="">Search</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12@xs header--search-bar hidden@lg-up u-mar-b-small">
          <div class="o-header--search">
            <form name="searchProducts" class="o-form--inline c-search-form">
              <div class="o-form__row">
                <div class="o-form--input-pack o-form__input-contain">
                  <div class="input-group--addon unstyled input-group--addon__inset">
                    <i class="icon icon-search"></i>
                  </div>
                  <input type="text" name="searchTermMobile" minlength="3" required autofocus
                    class="o-input o-input--textual input-addon--expand input-group--addon__inset-left"
                    placeholder="Enter Keyword or Product Code" pattern=".{3,}" title="3 characters minimum">
                  <div class="input-group--addon input-group--addon__button unstyled c-search__button">
                    <button type="submit" class="">Search</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
      </div>
    </div>
  </div>

</div>


<div class="o-nav__container">
  <div class="container--fluid">
    {{> partials/nav-megamenu }}
  </div>
</div>