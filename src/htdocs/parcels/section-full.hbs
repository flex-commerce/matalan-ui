<div class="section">
  {{# times 1 }}
  <div class="section--item section--item--full section--bg section--full-{{ this }} col-xs-12 col-md-12 u-font-ta-c u-mar-b-small">
    <div class="section-detail--outer section--detail--center">
      <div class="section--detail">
        <div class="section--detail-title u-mar-v-medium u-font-wb">{{lorem count=5}}</div>
        <div class="section--detail-sub u-mar-v-medium u-font-wb u-color-grey70">{{lorem count=8}}</div>
        <div class="section--detail-btn c-btn c-btn-primary__alt u-mar-v-medium hidden-lg-down">View</div>
      </div>
    </div>
  </div>
  <style>
    .section--full-{{ this }} {
        background-image: url("./img/full-{{ this }}.jpg");
    }
  </style>
  {{/ times }}
</div>