<div class="o-section">
    <div class="o-section-department--slick">
      {{#each departmentmenu}}
        <div class="o-section-department--outer">
          <div class="o-section-department--inner">
            <span class="o-section-department--title u-font-sec">{{menuTitle}}</span>
            <div class="o-section-department--list">
                <ul class="">
                  {{#each menuItems}}
                    <li><a href="">{{{this}}}</a></li>
                  {{/each}}
                </ul>
            </div>
            <div class="o-section-department--image">
              <img src="{{menuImage}}">
            </div>
            <a href="#" class="o-section-department--link c-btn">View&nbsp;More</a>
          </div>
        </div>
      {{/each}}
    </div>
</div>
