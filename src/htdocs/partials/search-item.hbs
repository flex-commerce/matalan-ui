<div class="search-results--item u-font-ta-c u-mar-b-medium">

  <a href="{{ productLink }}" class="link--nostyle">

    <div class="results__image">
      <img class="img"  src="{{productImages.[0]}}" onmouseover="this.src='{{productImages.[1]}}'" onmouseout="this.src='{{productImages.[0]}}'">

      <div data-content="{{promotionText}}" class="c-roundel c-roundel__pri c-roundel--custom roundel-pos-{{promotionPosition}}"></div>
      <div data-content="Top Right" class="c-roundel c-roundel__pri c-roundel--custom roundel-pos-tr"></div>
      <div data-content="Top Right" class="c-roundel c-roundel__pri c-roundel--custom roundel-pos-tr"></div>
    </div>

    <div class="u-mar-b-tiny u-cf">
      <div class="results__banner u-bgcolor-pri u-color-white u-font-upper">
        <strong>50% off</strong>
      </div>
    </div>

    <div class="results__detail">
      <div class="results__detail__title u-mar-t-small u-pad-h-medium u-font--small">{{productTitle}}</div>

      <div class="results__detail__price u-font-wb">
        {{#if nowPrice}}
        <span class="u-color-pri">Now {{nowPrice}}</span>
        {{else}}
          <span>{{productPrice}}</span>
        {{/if}}
      </div>

      <div class="results__detail__price--was u-font--small">
        {{#if nowPrice}}
        <span class="u-font-strikethrough u-font--small">Was {{productPrice}}</span>
        {{ else }}
        <span>&nbsp;</span>
        {{/if}}
      </div>

    </div>

  </a>

  <a class="c-btn--block u-mar-v-small" href="">
    <div class="c-btn c-btn-tertiary--alt c-btn--small u-font-upper">View</div>
  </a>

  <div class="rating rating__small">
    <i class="icon icon-star-fill {{ isactive productRating 0 }}"></i>
    <i class="icon icon-star-fill {{ isactive productRating 1 }}"></i>
    <i class="icon icon-star-fill {{ isactive productRating 2 }}"></i>
    <i class="icon icon-star-fill {{ isactive productRating 3 }}"></i>
    <i class="icon icon-star-fill {{ isactive productRating 4 }}"></i>
  </div>


  <a class="link u-font--smaller" href="#">More Colours Available</a>

</div>