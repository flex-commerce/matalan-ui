<div class="u-cf">
  <h5 class="u-font-upper u-fl">Shopping Bag</h5>
</div>
<div class="u-cf">
  <div class="o-bag--inner">
  {{> partials/minibag-contents }}
  </div>
</div>

<div class="separator"></div>

<div class="o-accord__container">
  <div class="o-form__row">
    <div class="o-form__label-contain">
      <label class="o-form__label-primary u-font-upper">
        <a class="btn btn-primary collapsed" data-toggle="collapse" href="#collapseExample" aria-expanded="false">
          Got a promo code?
          <i class="icon icon-plus icon--vertical-right"></i>
          <i class="icon icon-minus icon--vertical-right"></i>
        </a>
      </label>
    </div>
  </div>

  <div class="collapse" id="collapseExample">
    <form action="" class="o-form o-form--inline">
      <div class="o-form__row">
        <div class="o-form__input-contain o-form--input-pack o-form--input-pack--styled o-form__input--icon">
          <input type="text" name="searchTerm" minlength="3" required="" class="o-input o-input--textual input-addon--expand" placeholder="Enter code" pattern=".{3,}" title="3 characters minimum">
          <div class="input-group__btn">
            <button class="c-btn c-btn-secondary" href="">Apply Code</button>
          </div>
          <i class="icon icon-reward-card"></i>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="separator"></div>

<dl class="o-deflist-right">
  <dt>Shipping</dt>
  <dd>&pound;0.00</dd>
  <dt>Total Savings</dt>
  <dd>&pound;0.00</dd>
  <dt>Subtotal</dt>
  <dd>&pound;0.00</dd>
</dl>
