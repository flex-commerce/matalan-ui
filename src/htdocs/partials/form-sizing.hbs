<div class="xx-row">
  <div class="col-12@xs">
    <h3>Form controls</h3>
    <p>Examples of standard form controls supported in an example form layout.</p>
  </div>
  <div class="col-12@xs">
    <h3>Inputs</h3>
    <hr>


    <div class="u-cf">
      <form action="" class="o-form--wide colspan-6">

        <div class="o-form__row">
          <div class="o-form__label-contain">
            <label class="o-form__label-primary">Text Input</label>
          </div>
          <div class="o-form__input-contain">
            <input type="text" class="o-input o-input--textual" placeholder="Text Input" />
          </div>
        </div>

        <div class="o-form__row">
          <div class="o-form__label-contain">
            <label class="o-form__label-primary">Prepended</label>
          </div>
          <div class="o-form--input-pack o-form__input-contain">
            <div class="input-group--addon">@</div>
            <input type="text" class="o-input o-input--textual input-addon--expand" placeholder="Username">
          </div>
        </div>

        <div class="o-form__row">
          <div class="o-form__label-contain">
            <label class="o-form__label-primary">Appended</label>
          </div>
          <div class="o-form--input-pack o-form__input-contain">
            <input type="text" class="o-input o-input--textual input-addon--expand" placeholder="Username">
            <div class="input-group--addon">.00</div>
          </div>
        </div>

        <div class="o-form__row">
          <div class="o-form__label-contain">
            <label class="o-form__label-primary">With a Button</label>
          </div>
          <div class="o-form--input-pack o-form__input-contain">
            <input type="text" class="o-input o-input--textual input-addon--expand" placeholder="Username">
            <a class="input-group--addon" href="">Go</a>
          </div>
        </div>


      </form>
    </div>


    <h3>Form Grid Sizing</h3>
    <hr>

    <div class="o-form__row">
      <div class="o-form__input-contain colspan-2">
        <input type="text" class="o-input o-input--textual" placeholder=".colspan-2" />
      </div>
    </div>

    <div class="o-form__row">
      <div class="o-form__input-contain colspan-4">
        <input type="text" class="o-input o-input--textual" placeholder=".colspan-4" />
      </div>
    </div>

    <div class="o-form__row">
      <div class="o-form__input-contain colspan-6">
        <input type="text" class="o-input o-input--textual" placeholder=".colspan-6" />
      </div>
    </div>

    <div class="o-form__row">
      <div class="o-form__input-contain colspan-8">
        <input type="text" class="o-input o-input--textual" placeholder=".colspan-8" />
      </div>
    </div>

    <div class="o-form__row">
      <div class="o-form__input-contain colspan-10">
        <input type="text" class="o-input o-input--textual" placeholder=".colspan-10" />
      </div>
    </div>

    <div class="o-form__row">
      <div class="o-form__input-contain colspan-12">
        <input type="text" class="o-input o-input--textual" placeholder=".colspan-12" />
      </div>
    </div>
  </div>
</div>
